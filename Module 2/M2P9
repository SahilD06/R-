install.packages("ggplot2")

library(ggplot2)

housing <- read.csv("csv9.csv")

housing$guestroom <- as.factor(housing$guestroom)
housing$prefarea <- as.factor(housing$prefarea)

guest_pref_table <- table(housing$guestroom, housing$prefarea)
guest_pref_table

chi_result <- chisq.test(guest_pref_table)
chi_result

ggplot(housing, aes(x = guestroom, fill = prefarea)) +
  geom_bar(position = "dodge") +
  labs(
    title = "Preferred Area by Guest Room Availability",
    x = "Guest Room (0 = No, 1 = Yes)",
    y = "Count",
    fill = "Preferred Area"
  ) +
  theme_minimal() +
  scale_fill_manual(values = c("lightgreen", "orange"))
